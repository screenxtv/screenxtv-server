<style>
div.main{
	margin:5px 20px;
	font-size:18px;
}
#sign_in,#sign_up{
	margin:16px;
	border-radius:8px;
	background:white;
	box-shadow:0 0 8px silver;
	width:300px;
}
div.item{
	box-shadow:0 0 8px silver;
	margin:16px;
	padding:4px;
}
div.item div{font-size:18px;}
div.item div.url{font-size:24px;}
</style>
<div class='main'>
	<h1>User Profile</h1>
	<div class='item'>
		<%= image_tag current_user.user_icon %>
		<div>user name: <%= @user.name %></div>
		<div>display name: <%= @user.display_name %></div>
	</div>
	<div class='socials'>
		<% @user.oauths.each do |oauth| %>
			<div>
				<h2><%= oauth.provider %></h2>
				<%= link_to oauth.url do %>
					<%= image_tag oauth.icon, width:48,height:48 %>
					<%= oauth.display_name %>
					<%= oauth.name %>
				<% end %>
			</div>
		<% end %>
	</div>
	<br>
	<h1>Reserved URLs</h1>
	<% @user.screens.each do |screen| %>
		<div class='item'>
			<div class='url'><a href="/<%= screen.url %>"><%= screen.url %></a>
			<div>Total Viewer: <%= screen.total_viewer %></div>
			<div>Max Viewer: <%= screen.max_viewer %></div>
			<% time=screen.total_time %>
			<div>Total Time: <%= time/60/60/24 %>days <%= h=time/60/60%24;"#{h/10}#{h%10}"%>:<%= m=time/60%60;"#{m/10}#{m%10}" %></div>
		</div>
	<% end %>
</div>