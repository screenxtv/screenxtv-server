<script src="/assets/socket.io.js"></script>
<script src="/assets/jquery.min.js"></script>
<script src="/assets/vt100.js"></script>
<script src="/assets/terminal.js"></script>
<script src="/assets/terminalview.js"></script>
<script>
channelID="<%= url %>"
host=location.hostname;
port=8080
var terminalview;
$(function(){
	if(!channelID)return;
	terminalview=new TerminalView(document.getElementById("terminal"),host,port,channelID,false);
})
</script>

<div id="terminal" style="font-size:16px;box-shadow:0 0 8px silver;margin:10px;"></div>
<%= form_tag post_path,remote:true do%>
	<input name='message'>
<% end %>
